$list = DB::table('notes')
    ->select( array('category') )
    ->distinct()
    ->whereNull('deleted_at')
    ->orderBy('category','desc')
    ->get()
    ->toArray();

//print_r( $list );
$result = array( 'meta' => array( 'skip' => $skip, 'limit' => $limit ),
                 'list' => $list );
echo json_encode( $result, JSON_PRETTY_PRINT );


